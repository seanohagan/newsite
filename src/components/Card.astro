---
import {Image} from "astro:assets";
import Link from "./Link.astro";

interface Astro {
    title: string;
    description: string;
    imgSrc?: string;
    href?: string;
}

const {title, description, imgSrc, href} = Astro.props;
---
<div class="p-2 w-full">
    <div class="overflow-hidden rounded-md border-2 border-gray-200 border-opacity-60 dark:border-gray-700 flex flex-col md:flex-row">
        {imgSrc && (
            <div class="md:w-2/5 flex-shrink-0">
                {href ? (
                    <Link href={href} aria-label={`Link to ${title}`}>
                        <Image
                            alt={title}
                            src={imgSrc}
                            class="object-contain object-center w-full h-full"
                            width={500}
                            height={300}
                        />
                    </Link>
                ) : (
                    <Image
                        alt={title}
                        src={imgSrc}
                        class="object-cover object-center w-full h-full"
                        width={500}
                        height={300}
                    />
                )}
            </div>
        )}
        <div class="p-4 flex-1">
            <h2 class="mb-2 text-2xl font-bold leading-8 tracking-tight">
                {href ? (
                        <Link href={href} aria-label={`Link to ${title}`}>
                            {title}
                        </Link>
                ) : (
                    title
                )}
            </h2>
            <p class="prose mb-2 max-w-none text-gray-500 dark:text-gray-400">{description}</p>
            {href && (
                    <Link
                            href={href}
                            class="text-base font-medium leading-6 text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
                            aria-label={`Link to ${title}`}
                    >
                        Learn more &rarr;
                    </Link>
            )}
        </div>
    </div>
</div>
